    <!-- Counter -->
    <section class="counter">
        <div class="container">
            <div class="row text-center individual">
                <div class="col-3 wow tada">
                    <img src="~/images/gryffindor-shield.jpg" alt="Counter Background Gryffindor Crest">
                    <h1 id="days"></h1>
                    <h5>Days</h5>
                </div>
                <div class="col-3 wow tada">
                    <img src="~/images/Slytherin.jpg" alt="Counter Background Slytherin Crest">
                    <h1 id="hours"></h1>
                    <h5>Hours</h5>
                </div>
                <div class="col-3 wow tada">
                    <img src="~/images/Hufflepuff.jpg" alt="Counter Background Hufflepuff Crest">
                    <h1 id="minutes"></h1>
                    <h5>Minutes</h5>
                </div>
                <div class="col-3 wow tada">
                    <img src="~/images/Ravenclaw.jpg" alt="Counter Background Ravenclaw Crest">
                    <h1 id="seconds"></h1>
                    <h5>Seconds</h5>
                </div>
            </div>
            <div class="row text-center allInOne">
                <div class="col-12 wow tada">
                    <img src="~/images/count-number-bg.png" alt="Counter Background">
                    <h1 id="all"></h1>
                    <h5>D : H : M : S</h5>
                </div>
            </div>
        </div>
    </section>

